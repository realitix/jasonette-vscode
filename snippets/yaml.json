{
 "Transition one step back from the current view": {
  "prefix": [
   "type: $back"
  ],
  "body": [
   "\\$back",
   "{}"
  ]
 },
 "Close a modal window": {
  "prefix": [
   "type: $close"
  ],
  "body": [
   "\\$close",
   "{}"
  ]
 },
 "Href simple": {
  "prefix": [
   "type: $href"
  ],
  "body": [
   "\\$href",
   "options:",
   "\turl: JSON url"
  ]
 },
 "Call an action via lambda": {
  "prefix": [
   "type: $lambda"
  ],
  "body": [
   "\\$lambda",
   "options:",
   "\tname: Action name",
   "\toptions:",
   "\t\tparameter: My parameter"
  ]
 },
 "Similar to back with a return value": {
  "prefix": [
   "type: $ok"
  ],
  "body": [
   "\\$ok",
   "options:",
   "\tparameter: value"
  ]
 },
 "Reload completely the view": {
  "prefix": [
   "type: $reload"
  ],
  "body": [
   "\\$reload",
   "{}"
  ]
 },
 "Render the template": {
  "prefix": [
   "type: $render"
  ],
  "body": [
   "\\$render",
   "{}"
  ]
 },
 "Scroll top or bottom": {
  "prefix": [
   "type: $scroll"
  ],
  "body": [
   "\\$scroll",
   "options:",
   "\tposition: top | bottom"
  ]
 },
 "Take a screenshot": {
  "prefix": [
   "type: $snapshot"
  ],
  "body": [
   "\\$snapshot",
   "{}"
  ]
 },
 "Open an alert box": {
  "prefix": [
   "type: $util.alert"
  ],
  "body": [
   "\\$util.alert",
   "options:",
   "\ttitle: My title"
  ]
 },
 "Open an alert box with form": {
  "prefix": [
   "type: $util.alert"
  ],
  "body": [
   "\\$util.alert",
   "options:",
   "\tform: true",
   "\tmomo:",
   "\t\tmama: '1'",
   "\t\tpipi:",
   "\t\t- '1'",
   "\t\t- '2'",
   "\t\t- '3'",
   "\ttitle: My title"
  ]
 },
 "Open a toast": {
  "prefix": [
   "type: $util.toast"
  ],
  "body": [
   "\\$util.toast",
   "options:",
   "\ttext: My text",
   "\ttype: error | info | warning | dark | default | success (default)"
  ]
 }
}